<h2 class="ui center aligned icon header">
  <i class="circular comments outline inverted green icon"></i>
  Chat at me!
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui large feed">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon">
              <div class="ui fluid icon input focus">
                <input type="text" placeholder="Enter a message...">
                <i class="bordered inverted green edit icon"></i>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted green vertical menu">
          <a class="item"></a>
          <a class="item"></a>
          <a class="item"></a>
        </div>
      </div>
    </div>
  </div>
</div>
